<Window
    x:Class="DirSyncFTPS.AddNewSynchronizedDirectoryDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DirSyncFTPS"
    mc:Ignorable="d"
    Title="Add new synchronized directory"
    ResizeMode="CanResize"
    MinHeight="640"
    Height="640"
    MinWidth="384"
    Width="384">

    <Grid
        Margin="16">

        <Grid.RowDefinitions>
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel
            Grid.Row="0">

            <Button
                Height="25"
                TabIndex="-10"
                x:Name="ButtonHelp"
                Click="ButtonHelp_OnClick">
                Help
            </Button>

            <Label
                Content="Host:"
                Margin="-4 8 0 0" />

            <Grid
                HorizontalAlignment="Stretch"
                Height="25"
                VerticalAlignment="Center">

                <Grid.ColumnDefinitions>

                    <ColumnDefinition
                        Width="*" />

                    <ColumnDefinition
                        Width="auto" />

                </Grid.ColumnDefinitions>

                <TextBox
                    x:Name="TextBoxHostName"
                    GotFocus="TextBox_OnGotFocus"
                    Grid.Column="0" />

                <Button
                    Padding="8 0 8 0"
                    Margin="-4 0 0 0"
                    Width="64"
                    Grid.Column="1"
                    TabIndex="-10"
                    x:Name="ButtonClearHostNameField"
                    Click="ButtonClearHostNameField_OnClick">
                    Clear
                </Button>

            </Grid>

            <Label
                Content="Port:"
                Margin="-4 8 0 0" />

            <Grid
                HorizontalAlignment="Stretch"
                Height="25"
                VerticalAlignment="Center">

                <Grid.ColumnDefinitions>

                    <ColumnDefinition
                        Width="*" />

                    <ColumnDefinition
                        Width="auto" />

                </Grid.ColumnDefinitions>

                <TextBox
                    x:Name="TextBoxPortNumber"
                    PreviewTextInput="NumberValidationTextBox"
                    GotFocus="TextBox_OnGotFocus"
                    Text="22"
                    Grid.Column="0" />

                <Button
                    Padding="8 0 8 0"
                    Margin="-4 0 0 0"
                    Width="64"
                    Grid.Column="1"
                    TabIndex="-10"
                    x:Name="ButtonClearPortNumberField"
                    Click="ButtonClearPortNumberField_OnClick">
                    Reset
                </Button>

            </Grid>

            <Label
                Content="Username:"
                Margin="-4 8 0 0" />

            <Grid
                HorizontalAlignment="Stretch"
                Height="25"
                VerticalAlignment="Center">

                <Grid.ColumnDefinitions>

                    <ColumnDefinition
                        Width="*" />

                    <ColumnDefinition
                        Width="auto" />

                </Grid.ColumnDefinitions>

                <TextBox
                    GotFocus="TextBox_OnGotFocus"
                    x:Name="TextBoxUsername"
                    Grid.Column="0" />

                <Button
                    Padding="8 0 8 0"
                    Margin="-4 0 0 0"
                    Width="64"
                    Grid.Column="1"
                    TabIndex="-10"
                    x:Name="ButtonClearUsernameField"
                    Click="ButtonClearUsernameField_OnClick">
                    Clear
                </Button>

            </Grid>

            <Label
                Content="Password:"
                Margin="-4 8 0 0" />

            <Grid
                HorizontalAlignment="Stretch"
                Height="25"
                VerticalAlignment="Center">

                <Grid.ColumnDefinitions>

                    <ColumnDefinition
                        Width="*" />

                    <ColumnDefinition
                        Width="auto" />

                </Grid.ColumnDefinitions>

                <PasswordBox
                    x:Name="PasswordBoxPassword"
                    GotFocus="TextBox_OnGotFocus"
                    Grid.Column="0" />

                <Button
                    Padding="8 0 8 0"
                    Margin="-4 0 0 0"
                    Width="64"
                    Grid.Column="1"
                    TabIndex="-10"
                    x:Name="ButtonClearPasswordField"
                    Click="ButtonClearPasswordField_OnClick">
                    Clear
                </Button>

            </Grid>

            <Label
                Content="Local directory:"
                Margin="-4 8 0 0" />

            <Grid
                HorizontalAlignment="Stretch"
                Height="25"
                VerticalAlignment="Center">

                <Grid.ColumnDefinitions>

                    <ColumnDefinition
                        Width="*" />

                    <ColumnDefinition
                        Width="auto" />

                </Grid.ColumnDefinitions>

                <TextBox
                    x:Name="TextBoxLocalDirectory"
                    GotFocus="TextBox_OnGotFocus"
                    Grid.Column="0" />

                <Button
                    Padding="8 0 8 0"
                    Margin="-4 0 0 0"
                    Width="64"
                    Grid.Column="1"
                    TabIndex="-10"
                    x:Name="ButtonSelectLocalDirectory"
                    Click="ButtonSelectLocalDirectory_OnClick">
                    Browse
                </Button>

            </Grid>

            <Label
                Content="Remote directory:"
                Margin="-4 8 0 0" />

            <Grid
                HorizontalAlignment="Stretch"
                Height="25"
                VerticalAlignment="Center">

                <Grid.ColumnDefinitions>

                    <ColumnDefinition
                        Width="*" />

                    <ColumnDefinition
                        Width="auto" />

                </Grid.ColumnDefinitions>

                <TextBox
                    x:Name="TextBoxRemoteDirectory"
                    GotFocus="TextBox_OnGotFocus"
                    Grid.Column="0" />

                <Button
                    Padding="8 0 8 0"
                    Margin="-4 0 0 0"
                    Width="64"
                    Grid.Column="1"
                    TabIndex="-10"
                    x:Name="ButtonClearRemoteDirectoryField"
                    Click="ButtonClearRemoteDirectoryField_OnClick">
                    Clear
                </Button>

            </Grid>

            <Label
                Content="FTPS Mode:"
                Margin="-4 8 0 0" />

            <Grid
                HorizontalAlignment="Left"
                Height="25"
                VerticalAlignment="Center">

                <Grid.ColumnDefinitions>

                    <ColumnDefinition
                        Width="*" />

                    <ColumnDefinition
                        Width="auto" />

                </Grid.ColumnDefinitions>

                <RadioButton
                    x:Name="RadioButtonExplicitFTPSMode"
                    Checked="RadioButtonExplicitFTPSMode_OnChecked"
                    Grid.Column="0"
                    Content="Explicit"
                    IsChecked="True" />

                <RadioButton
                    x:Name="RadioButtonImplicitFTPSMode"
                    Checked="RadioButtonImplicitFTPSMode_OnChecked"
                    Grid.Column="1"
                    Content="Implicit"
                    Margin="16 0 0 0" />

            </Grid>

        </StackPanel>

        <Grid
            Grid.Row="1"
            Height="25"
            Margin="0 32 0 0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center">

            <Grid.ColumnDefinitions>

                <ColumnDefinition
                    Width="*" />

                <ColumnDefinition
                    Width="auto" />

                <ColumnDefinition
                    Width="auto" />

            </Grid.ColumnDefinitions>

            <Button
                x:Name="ButtonCancel"
                Width="64"
                Grid.Column="1"
                Click="ButtonCancel_OnClick">
                Cancel
            </Button>

            <Button
                x:Name="ButtonConfirm"
                Width="64"
                Grid.Column="2"
                Margin="8 0 0 0"
                Click="ButtonConfirm_OnClick">
                Confirm
            </Button>

        </Grid>

    </Grid>
</Window>